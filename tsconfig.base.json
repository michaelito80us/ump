{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@ump/core": ["./packages/core/src"],
      "@ump/core/*": ["./packages/core/src/*"],
      "@ump/engine": ["./packages/engine/src"],
      "@ump/engine/*": ["./packages/engine/src/*"],
      "@ump/ui": ["./packages/ui/src"],
      "@ump/ui/*": ["./packages/ui/src/*"],
      "@ump/plugins": ["./packages/plugins/src"],
      "@ump/plugins/*": ["./packages/plugins/src/*"],
      "@ump/infra-scripts": ["./packages/infra-scripts/src"],
      "@ump/infra-scripts/*": ["./packages/infra-scripts/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", ".turbo"]
}
